{
  "name": "budget-app",
  "version": "1.0.0",
  "description": "progressive web app for tracking financial transactions",
  "main": "waitress.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "npm run build && node waitress.js",
    "start:dev": "concurrently \"npm run waitress\" \"cd client && npm run start\"",
    "server": "nodemon waitress.js --ignore client",
    "build": "cd client && npm run build",
    "install": "cd client && npm install",
    "client": "cd client && npm start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/coding-boot-camp/unit18hw.git"
  },
  "author": "Denny da Vjncj",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/coding-boot-camp/unit18hw/issues"
  },
  "homepage": "https://github.com/DennyDaVjncj/iSpend.pwa",
  "dependencies": {
    "compression": "^1.7.4",
    "express": "^4.17.1",
    "mongoose": "^5.5.15",
    "morgan": "^1.9.1",
    "nodemon": "^2.0.7"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "nodemon": "2.0.7"    
  }
}
